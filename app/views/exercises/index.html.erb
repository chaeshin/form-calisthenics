<h1 class="custom-margin mb-3">Exercise List</h1>
<!-- Tab Navigation -->
<ul class="nav nav-pills category-list py-3 mb-3" id="pills-tab" role="tablist">
  <li class="nav-item" role="presentation">
    <%= link_to "Mobility", exercises_path(category: 'Mobility'), remote: true, class: "nav-link active", id: "pills-mobility-tab", data: { bs_toggle: "pill", bs_target: "#pills-mobility" }, role: "tab", aria_controls: "pills-mobility", aria_selected: "true" %>
  </li>
  <li class="nav-item" role="presentation">
    <%= link_to "Skill", exercises_path(category: 'Skills'), remote: true, class: "nav-link", id: "pills-skills-tab", data: { bs_toggle: "pill", bs_target: "#pills-skills" }, role: "tab", aria_controls: "pills-skills", aria_selected: "false" %>
  </li>
  <li class="nav-item" role="presentation">
    <%= link_to "Upper Body", exercises_path(category: 'Push/Pull Upper Body'), remote: true, class: "nav-link", id: "pills-upperbody-tab", data: { bs_toggle: "pill", bs_target: "#pills-upperbody" }, role: "tab", aria_controls: "pills-upperbody", aria_selected: "false" %>
  </li>
  <li class="nav-item" role="presentation">
    <%= link_to "Core", exercises_path(category: 'Core'), remote: true, class: "nav-link", id: "pills-core-tab", data: { bs_toggle: "pill", bs_target: "#pills-core" }, role: "tab", aria_controls: "pills-core", aria_selected: "false" %>
  </li>
  <li class="nav-item" role="presentation">
    <%= link_to "Lower Body", exercises_path(category: 'Lower Body'), remote: true, class: "nav-link", id: "pills-lowerbody-tab", data: { bs_toggle: "pill", bs_target: "#pills-lowerbody" }, role: "tab", aria_controls: "pills-lowerbody", aria_selected: "false" %>
  </li>
</ul>
<!-- Tab Content -->
<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane fade show active" id="pills-mobility" role="tabpanel" aria-labelledby="pills-mobility-tab" tabindex="0">
    <div class="cards">
      <% @exercises.where(category: 'Mobility').each do |exercise| %>
        <%= render 'shared/exercise_list_card', exercise: exercise %>
      <% end %>
    </div>
  </div>
  <div class="tab-pane fade" id="pills-skills" role="tabpanel" aria-labelledby="pills-skills-tab" tabindex="0">
    <div class="cards">
      <% @exercises.where(category: 'Skills').each do |exercise| %>
        <%= render 'shared/exercise_list_card', exercise: exercise %>
      <% end %>
    </div>
  </div>
  <div class="tab-pane fade" id="pills-upperbody" role="tabpanel" aria-labelledby="pills-upperbody-tab" tabindex="0">
    <div class="cards">
      <% @exercises.where(category: 'Push/Pull Upper Body').each do |exercise| %>
        <%= render 'shared/exercise_list_card', exercise: exercise %>
      <% end %>
    </div>
  </div>
  <div class="tab-pane fade" id="pills-core" role="tabpanel" aria-labelledby="pills-core-tab" tabindex="0">
    <div class="cards">
      <% @exercises.where(category: 'Core').each do |exercise| %>
        <%= render 'shared/exercise_list_card', exercise: exercise %>
      <% end %>
    </div>
  </div>
  <div class="tab-pane fade" id="pills-lowerbody" role="tabpanel" aria-labelledby="pills-lowerbody-tab" tabindex="0">
    <div class="cards">
      <% @exercises.where(category: 'Lower Body').each do |exercise| %>
        <%= render 'shared/exercise_list_card', exercise: exercise %>
      <% end %>
    </div>
  </div>
</div>
