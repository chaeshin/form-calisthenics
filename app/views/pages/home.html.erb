<%# enter last exercise recorded here  %>
<%= form_with url: root_path, method: :get, class: "d-flex align-items-center" do %>
  <h6 class="pt-1 m-2"><i class="fa-solid fa-magnifying-glass text-white"></i></h6>
  <%= text_field_tag :query,
            params[:query],
            class: "form-control rounded-pill",
            placeholder: "Search by city, brand, model, or year"
            %>
  <%= submit_tag "Search", name: "", class: "m-3 btn btn-light shadow-sm align-item-center border rounded-pill" %>
<% end %>
<h1 class="custom-margin">Training Plan</h1>
<div class="cards">
  <% @workouts.each do |workout| %>
    <%= render 'shared/workout_card', workout: workout %>
  <% end %>
</div>
<div class="fab-container">
  <%= link_to new_workout_path, class: 'fab' do %>
