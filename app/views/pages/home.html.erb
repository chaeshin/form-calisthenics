<div class="styling-header">
  <img class="avatar-large" alt="avatar-large" src="https://kitt.lewagon.com/placeholder/users/arthur-littm" />
  <h1 class="margin-h1">Hi, Nick 👋 </h1>
</div>
<%# enter last exercise recorded here  %>
<%= form_with url: root_path, method: :get, class: "d-flex align-items-center mt-3" do %>
  <h6><i class="fa-solid fa-magnifying-glass text-white"></i></h6>
  <%= text_field_tag :query,
            params[:query],
            class: "form-control rounded-pill",
            placeholder: "Search by exercise or workout",
            style: "background-color: white;"
            %>
  <%= submit_tag "Search", name: "", class: "btn btn-light shadow-sm align-item-center border rounded-pill", style: "background-color: white;" %>
<% end %>

<h2 class="custom-margin">Featured Workout</h2>
<div class="bubble">
  <span class="emoji">🚶‍♂️</span>
</div>
<span class="title">Mobility</span>

<h2 class="custom-margin">Training Plan</h2>
<div class="cards">
  <% @workouts.each do |workout| %>
    <%= render 'shared/workout_card', workout: workout %>
  <% end %>
</div>
<div class="fab-container">
  <%= link_to new_workout_path, class: 'fab' do %>
    <i class="fas fa-plus"></i> <!-- Font Awesome icon -->
  <% end %>
</div>
