<div>
  <div class="step-progress">
    <% exercises.each_with_index do |exercise, i| %>
      <% exercise_num = i + 1 %>

      <% if @exercise_completed[exercise.name] %>
        <div class="bullet-completed-<%= exercise.exercise_type %>"><%= exercise.name.first %></div>
      <% else %>
        <div class="bullet"><%= exercise_num %></div>
      <% end %>
    <% end %>
  </div>
</div>
